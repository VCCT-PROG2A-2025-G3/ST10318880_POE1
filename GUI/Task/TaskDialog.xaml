<Window x:Class="ST10318880_POE1.GUI.Task.TaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Details"
        Height="200"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock x:Name="TaskTitleText"
                   FontWeight="Bold"
                   FontSize="16"/>
        <TextBlock x:Name="TaskDescriptionText"
                   Margin="0,10,0,20"/>
        <TextBlock x:Name="ReminderTextBlock"
                   FontSize="14"
                   Margin="0,5,0,0"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Completed"
                    Width="90"
                    Margin="0,0,10,0"
                    Click="Completed_Click"/>
            <Button Content="Delete"
                    Width="90"
                    Click="Delete_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
