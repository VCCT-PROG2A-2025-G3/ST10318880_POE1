<Window x:Class="ST10318880_POE1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Assistant"
        Width="1200"
        Height="900">
        <DockPanel>
                <StackPanel DockPanel.Dock="Top"
                            Orientation="Horizontal"
                            Background="#eee">
                        <Button Content="Chat"
                                Click="ChatButton_Click"
                                Margin="5"/>
                        <Button Content="Task Manager"
                                Click="TaskButton_Click"
                                Margin="5"/>
                        <Button Content="Quiz"
                                Click="QuizButton_Click"
                                Margin="5"/>
                        <Button Content="Activity Log"
                                Click="LogButton_Click"
                                Margin="5"/>
                </StackPanel>

                <Frame Name="MainFrame"
                       NavigationUIVisibility="Hidden"/>
        </DockPanel>
</Window>
